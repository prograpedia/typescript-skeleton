{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2023",
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "types": ["node", "express", "multer"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
